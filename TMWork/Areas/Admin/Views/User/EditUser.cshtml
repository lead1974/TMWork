@model TMWork.Areas.Admin.ViewModels.User.UserEdit

@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using TMWork.Data.Models.User
@inject SignInManager<AuthUser> SignInManager

@{
    ViewData["Title"] = "Edit User";
}

<div class="col-lg-12">
    <h1 class="page-header">Edit User</h1>
    <div class="row">
        <div class="col-md-12">
            <section>
                <form asp-controller="User" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Email" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                <label asp-for="EmailConfirmed">
                                    <input asp-for="EmailConfirmed" />
                                    @Html.DisplayNameFor(m => m.EmailConfirmed)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-4 col-lg-offset-2">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <i class="fa fa-group fa-fw"></i> Role Maintenance
                                </div>
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="col-md-10">
                                        <ul class="list-group">
                                            @for (var i = 0; i < Model.CheckBoxRoles.Count; i++)
                                            {
                                                <li class="list-group-item">
                                                    @*<label asp-for="CheckBoxRoles[i].Name" class="col-md-2 control-label"></label>
                                        <input asp-for="CheckBoxRoles[i].Name" class="form-control" />*@
                                                    @Html.CheckBoxFor(r => r.CheckBoxRoles[i].IsChecked, Model.CheckBoxRoles[i].IsChecked)
                                                    @Html.LabelFor(r => r.CheckBoxRoles[i].Name, Model.CheckBoxRoles[i].Name)
                                                    @Html.HiddenFor(r => r.CheckBoxRoles[i].Id, Model.CheckBoxRoles[i].Id)
                                                    @Html.HiddenFor(r => r.CheckBoxRoles[i].Name, Model.CheckBoxRoles[i].Name)
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" value='Edit' name='action' class="btn btn-primary"> Edit User</button>
                                <button type="submit" value='Cancel' name='action' class="btn btn-default"> Cancel</button>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

